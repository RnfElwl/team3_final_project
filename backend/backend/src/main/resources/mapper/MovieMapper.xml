<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ict.backend.dao.MovieDAO">

    <!-- 장르별 영화 리스트 가져오기 -->
    <select id="getMoviesByGenre" parameterType="String" resultType="com.ict.backend.vo.MovieVO">
        SELECT * FROM movie_data_tbl WHERE movie_genre = #{genre}
    </select>

    <!-- 연도별 영화 리스트 가져오기 -->
    <select id="getMoviesByYear" parameterType="String" resultType="com.ict.backend.vo.MovieVO">
        SELECT * FROM movie_data_tbl WHERE opened_year = #{year}
    </select>

    <!-- 국가별 영화 리스트 가져오기 -->
    <select id="getMoviesByNation" parameterType="String" resultType="com.ict.backend.vo.MovieVO">
        SELECT * FROM movie_data_tbl WHERE movie_nation = #{nation}
    </select>




    <!-- 특정 영화 정보를 ID로 조회하는 SQL 쿼리 -->
